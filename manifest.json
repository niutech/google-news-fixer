{
  "manifest_version": 2,
  "name": "Fixer for Google News",
  "short_name": "Fixer for Google News",
  "description": "Fix Google News by adding your favorite topics, locations, sources, saved searches and removing unnecessary ones from its front page",
  "version": "0.2",
  "author": "niu tech",
  "homepage_url": "https://github.com/niutech/google-news-fixer",
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://news.google.com/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "48": "img/icon48.png"
    },
    "default_title": "Fixer for Google News"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
